@{
    ViewBag.Title = "意见反馈详情";
}
<html>
<head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link href="/modules/css/layout.css" rel="stylesheet" />
    <link href="/modules/css/iconfont/iconfont.css" rel="stylesheet" />
    <script src="/Scripts/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="/Scripts/sea.js"></script>
    <script type="text/javascript" src="/Scripts/sea-config.js"></script>
    <script type="text/javascript">
        seajs.use(["scripts/sysset/feedback"], function (feedback) {
            feedback.detailInit('@ViewBag.id');
        });
    </script>

</head>
<body>
    <div class="main-body">
        <div class="main-content">
            <div class="header-box">
                <span class="header-title">意见反馈详情</span>
                <a class="back right color333" href="javascript:if(history.length>1){ history.go(-1);} else{}">
                    <i class="iconfont blue">&#xe62d;</i> 返回
                </a>
            </div>

            <div class="content-body">
                <ul class="contentnew">
                    <li>
                        <span class="columnname">标题：</span>
                        <span id="Title"></span>
                    </li>
                    <li>
                        <span class="columnname">类型：</span>
                        <span id="Type"></span>
                    </li>
                    <li>
                        <span class="columnname">状态：</span>
                        <span id="Status"></span>
                    </li>
                    <li id="tipsli" class="hide">
                        <span class="columnname">被举报人：</span>
                        <span id="TipedName"></span>
                    </li>
                    <li>
                        <span class="columnname">描述：</span>
                        <span id="Remark"></span>
                    </li>
                    <li>
                        <span class="columnname">创建时间：</span>
                        <span id="CreateTime"></span>
                    </li>
                    <li>
                        <span class="columnname">解决方案：</span>
                        <textarea id="Content"></textarea>
                    </li>
                </ul>

                <div class="mTop20">
                    <input type="button" id="btn-finish" class="btn" value="已解决" />
                    <input type="button" id="btn-cancel" class="btn mLeft5" value="驳回" />
                    <input type="button" id="btn-delete" class="btn mLeft5" value="删除" />
                </div>
            </div>
        </div>
    </div>
</body>
</html>


