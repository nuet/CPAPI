                float: right;margin-right: 40px;cursor: pointer;outline: medium;text-decoration:none;}
             .next1:hover{border: solid 2px white;color: white; -webkit-opacity: 0.8;  -moz-opacity: 0.8; opacity: 08;filter:alpha(opacity=80);}
           	.p{width: 150px;bottom: 10px;right: 20px;position: absolute;color: white;font-size:16px;font-weight: 600;}
           	footer{max-width:78%;min-width:0px;height:28px;margin: 0 auto;/*margin-top: 50px;*/transform: rotateY(100%);font-size: 12px;position: absolute;left: 0;right: 0;}
           	.left{float: left;height: 28px;line-height: 30px;color:#555;}
           	.right{float: right;right: 200px;height: 28px;line-height: 30px;color:#555;}
