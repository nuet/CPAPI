@{
    ViewBag.Title = "登录"; 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>CPAPI后台登陆</title>
    <link href="/modules/css/layout.css" rel="stylesheet" />
    <link href="/modules/css/login.css" rel="stylesheet" />
    <link href="/modules/css/base.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/modules/images/logo.ico">
    <script src="/Scripts/sea.js"></script>
    <script src="/Scripts/sea-config.js"></script>
   <script type="text/javascript">
       seajs.use(["scripts/home"], function (home) {
           home.loginInit();
       });
    </script>
</head>
<body>
    <div class="login-body">
        <div class="main">
            <div class="title">
                 
                <div class="left" style="margin-left:-40px; color: #4a98e7; width: 250px; text-align: center; font-size: 24px; line-height: 30px;">
<img src="/modules/images/logo.ico"/>
                    CPAPI后台管理
                </div>
                <div class="clear"></div>
            </div>
            <div class="login">
                <div class="loginbar">
                    <input type="text" id="iptUserName" placeholder="请输入账号" maxlength="25"/>
                </div>
                <div class="loginbar">
                    <input type="password"  placeholder="请输入密码" id="iptPwd" />
                </div>
                <div id="loginBtn" class="mTop20"> 
                    <div class="btnLogin" id="btnLogin">登录</div>
                </div>

             
            </div>
        </div>
        <div class="copyright">
            Copyright©2015-2016 Michaux 保留所有权利<br/>
        </div>
    </div>
</body>
</html>
